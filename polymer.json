{
  "entrypoint": "index.html",
  "shell": "src/polyn-app.html",
  "fragments": [
    "src/home-view.html",
    "src/chats-view.html",
    "src/profile-view.html",
    "src/requests-view.html",
    "src/request-view.html",
    "src/cropper-view.html",
    "src/sellerinfo-view.html",
    "src/searchfilter-view.html",
    "src/chat-view.html",
    "src/business-view.html",
    "src/claimbusiness-view.html",
    "src/about-view.html",
    "src/error404-view.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "firebase-messaging-sw.js",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "bundle": false,
    "addServiceWorker": true,
    "addPushManifest": true,
    "insertPrefetchLinks": true,
    "js": {"minify": true},
    "css": {"minify": true},
    "html": {"minify": true}
  }]
}
